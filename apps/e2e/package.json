{
	"name": "@repo/e2e",
	"version": "1.0.0",
	"private": true,
	"description": "End-to-end tests for the web application",
	"scripts": {
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"test:headed": "playwright test --headed",
