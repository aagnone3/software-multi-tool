{
	"name": "@repo/api-server",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"main": "./src/index.ts",
	"scripts": {
		"dev": "./scripts/ensure-node-version.sh tsx watch src/index.ts",
		"build": "pnpm exec esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.cjs",
		"build:smoke-test": "pnpm build && node scripts/smoke-test.mjs",
		"start": "./scripts/ensure-node-version.sh node dist/index.cjs",
		"type-check": "tsc --noEmit",
		"test": "vitest --config ./vitest.config.ts --run",
		"test:ci": "VITEST_COVERAGE=1 VITEST_ENFORCE_THRESHOLDS=1 vitest --config ./vitest.config.ts --run"
	},
	"dependencies": {
		"@fastify/cors": "11.2.0",
		"@fastify/websocket": "11.2.0",
		"@orpc/server": "1.8.6",
		"@repo/api": "workspace:*",
		"@repo/auth": "workspace:*",
		"@repo/database": "workspace:*",
		"@repo/logs": "workspace:*",
		"dotenv": "17.2.3",
		"esbuild": "0.25.6",
		"fastify": "5.6.2",
		"pg-boss": "10.4.0",
		"ws": "8.19.0",
		"zod": "4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.12",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "25.0.10",
		"@types/ws": "8.5.13",
		"@vitest/coverage-v8": "4.0.18",
		"tsx": "4.20.1",
		"typescript": "5.9.3",
		"vitest": "4.0.18"
	}
}
