{
	"dependencies": {
		"@paralleldrive/cuid2": "^2.2.2",
		"@prisma/client": "6.15.0",
		"@repo/config": "workspace:*",
		"drizzle-orm": "^0.44.5",
		"drizzle-zod": "0.8.3",
		"pg": "^8.16.0",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "24.10.0",
		"@testcontainers/postgresql": "^11.8.0",
		"@vitest/coverage-v8": "4.0.7",
		"dotenv-cli": "^11.0.0",
		"drizzle-kit": "^0.31.6",
		"prisma": "6.19.0",
		"prisma-zod-generator": "^1.29.1",
		"testcontainers": "^11.8.0",
		"vitest": "4.0.7"
	},
	"main": "./index.ts",
	"name": "@repo/database",
	"scripts": {
		"generate": "prisma generate --no-hints --schema=./prisma/schema.prisma",
		"push": "dotenv -c -e ../../apps/web/.env -- prisma db push --skip-generate --schema=./prisma/schema.prisma",
		"migrate": "dotenv -c -e ../../apps/web/.env -- prisma migrate dev --schema=./prisma/schema.prisma",
		"studio": "dotenv -c -e ../../apps/web/.env -- prisma studio --schema=./prisma/schema.prisma",
		"type-check": "tsc --noEmit",
		"test": "vitest run --config ./vitest.config.ts",
		"test:integration": "vitest run prisma/queries/organizations.integration.test.ts --config ./vitest.config.ts",
		"test:ci": "VITEST_COVERAGE=1 VITEST_ENFORCE_THRESHOLDS=1 vitest run --config ./vitest.config.ts"
	},
	"types": "./**/.tsx",
	"version": "0.0.0"
}
