{
	"dependencies": {
		"@paralleldrive/cuid2": "2.3.1",
		"@prisma/client": "6.15.0",
		"@repo/config": "workspace:*",
		"drizzle-orm": "0.45.1",
		"drizzle-zod": "0.8.3",
		"pg": "8.16.3",
		"pg-boss": "10.4.0",
		"zod": "4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.12",
		"@repo/tsconfig": "workspace:*",
		"@testcontainers/postgresql": "11.11.0",
		"@types/node": "25.0.10",
		"@vitest/coverage-v8": "4.0.18",
		"dotenv-cli": "11.0.0",
		"drizzle-kit": "0.31.8",
		"prisma": "6.19.0",
		"prisma-zod-generator": "1.32.1",
		"testcontainers": "11.11.0",
		"vitest": "4.0.18"
	},
	"main": "./index.ts",
	"name": "@repo/database",
	"scripts": {
		"generate": "prisma generate --no-hints --schema=./prisma/schema.prisma",
		"push": "dotenv -c -e ../../apps/web/.env -- prisma db push --skip-generate --schema=./prisma/schema.prisma",
		"migrate": "dotenv -c -e ../../apps/web/.env -- prisma migrate dev --schema=./prisma/schema.prisma",
		"migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
		"studio": "dotenv -c -e ../../apps/web/.env -- prisma studio --schema=./prisma/schema.prisma",
		"type-check": "tsc --noEmit",
		"test": "vitest run --config ./vitest.config.ts",
		"test:integration": "vitest run --config ./vitest.config.ts \"**/*.integration.test.ts\"",
		"test:ci": "VITEST_COVERAGE=1 VITEST_ENFORCE_THRESHOLDS=1 vitest run --config ./vitest.config.ts",
		"pgboss:init": "dotenv -c -e ../../apps/web/.env -- node scripts/init-pgboss-schema.mjs",
		"pgboss:verify": "dotenv -c -e ../../apps/web/.env -- node scripts/verify-pgboss-schema.mjs",
		"db:pull": "dotenv -c -e ../../apps/web/.env -- prisma db pull --schema=./prisma/schema.prisma"
	},
	"types": "./**/.tsx",
	"version": "0.0.0"
}
