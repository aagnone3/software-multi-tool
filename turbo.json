{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": ["*"],
	"tasks": {
		"build": {
			"dependsOn": ["^generate", "^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"type-check": {},
		"clean": {
			"cache": false
		},
		"test": {
			"dependsOn": ["^test"],
			"outputs": ["coverage/**"]
		},
		"generate": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"dependsOn": ["^generate"],
			"persistent": true
		},
		"export": {
			"outputs": ["out/**"]
		},
		"lint": {},
		"start": {
			"cache": false,
			"dependsOn": ["^generate", "^build"],
			"persistent": true
		}
	}
}
