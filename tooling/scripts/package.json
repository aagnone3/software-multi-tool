{
	"dependencies": {
		"@linear/sdk": "60.0.1",
		"@repo/auth": "workspace:*",
		"@repo/config": "workspace:*",
		"@repo/database": "workspace:*",
		"@repo/logs": "workspace:*",
		"@repo/storage": "workspace:*",
		"@repo/utils": "workspace:*",
		"pg": "8.16.0",
		"stripe": "18.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.12",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "25.0.10",
		"@vitest/coverage-v8": "4.0.18",
		"nanoid": "5.1.5",
		"tsx": "4.21.0",
		"vitest": "4.0.18"
	},
	"name": "@repo/scripts",
	"private": true,
	"scripts": {
		"env:pull": "pnpm dlx tsx ./src/env/pull-vercel-env.ts",
		"env:list": "tsx ./src/env/manage-vercel-env.ts list",
		"env:set": "tsx ./src/env/manage-vercel-env.ts set",
		"env:unset": "tsx ./src/env/manage-vercel-env.ts unset",
		"create:user": "dotenv -c -e ../../apps/web/.env -- tsx ./src/create-user.ts",
		"linear": "dotenv -c -e ../../apps/web/.env.local -e ../../apps/web/.env -- node ./src/linear/index.mjs",
		"prisma:validate": "dotenv -c -e ../../apps/web/.env -- node ./src/prisma/validate-migration.mjs",
		"prisma:stage": "dotenv -c -e ../../apps/web/.env -- node ./src/prisma/stage-migration.mjs",
		"stripe:validate": "dotenv -c -e ../../apps/web/.env.local -e ../../apps/web/.env -- node ./src/stripe/validate-webhooks.mjs",
		"stripe:test-credits": "dotenv -c -e ../../apps/web/.env.local -e ../../apps/web/.env -- tsx ./src/stripe/test-credit-webhooks.ts",
		"supabase:validate-seed": "dotenv -c -e ../../apps/web/.env.local -e ../../apps/web/.env -- node ./src/supabase/validate-preview-seed.mjs",
		"preview-sync": "dotenv -c -e ../../apps/web/.env.local -e ../../apps/web/.env -- node ./src/preview-sync/index.mjs",
		"type-check": "tsc --noEmit",
		"test": "vitest --config ./vitest.config.ts --run",
		"test:ci": "VITEST_COVERAGE=1 VITEST_ENFORCE_THRESHOLDS=1 vitest --config ./vitest.config.ts --run"
	},
	"version": "0.0.0"
}
